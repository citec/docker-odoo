#!/bin/bash
#
# This script is designed to be run inside the container
#

# fail hard and fast even on pipelines
set -eo pipefail

function help {
    set +e
    cat bin/help.txt
    set -e
}

function login  {
    echo "Running bash"
    set +e
    if [[ ! -z "$1" ]] 
        then
            sudo su - $1
        else
            /bin/bash
        fi
    SERVICE_PID=$!
    set -e
}

function start {
    echo "Running odoo..."
    set +e
    if [ ! -z "$1" ]; then
        echo "...with additional args: $*"
    fi
    sudo -i -u odoo /usr/bin/python \
                    /opt/odoo/odoo.py \
                    -c /etc/odoo/odoo.conf \
                    $*
    SERVICE_PID=$!
    set -e
}

# smart shutdown on SIGINT and SIGTERM
function on_exit() {
    kill -TERM $SERVICE_PID
    wait $SERVICE_PID 2>/dev/null
    exit 0
}
trap on_exit INT TERM

file="/app/environment.sh"
if [ -f "$file" ]; then
    echo "Setting up environment"
    source $file
fi

file="/app/boot.sh"
if [ -f "$file" ]; then
    echo "Executing provided extra boot script"
    source $file
fi

file="/app/requirements.txt"
if [ -f "$file" ]; then
    echo "Installing extra python requirements"
    pip install -r $file
fi

# FIX permissions just in case user has mounted the odoo folder
chown -R odoo:odoo /opt/odoo

# Allow the use of environment vars in /etc/odoo/odoo.conf
file="/etc/odoo/odoo.tpl"
if [ -f "$file" ]; then
    echo "Applying enviroment vars to odoo configuration file"
    envsubst < /etc/odoo/odoo.tpl > /etc/odoo/odoo.conf
fi

echo "Running command..."
for arg in "$*"
do
    $arg
done

wait
